<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottomfragments.AddFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name" />

        <Spinner
            android:id="@+id/spinnerName"
            android:layout_marginTop="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cut" />

        <Spinner
            android:layout_marginTop="10dp"

            android:id="@+id/spinnerCut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shape" />

        <Spinner
            android:layout_marginTop="10dp"

            android:id="@+id/spinnerShape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Composition" />

        <Spinner
            android:layout_marginTop="10dp"

            android:id="@+id/spinnerComposition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treatment" />

        <Spinner
            android:layout_marginTop="10dp"

            android:id="@+id/spinnerTreatment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="10dp"

            android:id="@+id/editTextOrigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Origin" />

        <EditText
            android:layout_marginTop="10dp"

            android:id="@+id/editTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color" />

        <EditText
            android:layout_marginTop="10dp"

            android:id="@+id/editTextCarats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Carats"
            android:inputType="numberDecimal" />

        <LinearLayout
            android:id="@+id/imageButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/buttonImage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image 1"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/buttonImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Image 2"/>

            <Button
                android:id="@+id/buttonImage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Image 3"/>

            <Button
                android:id="@+id/buttonImage4"
                android:layout_width="wrap_content"
                android:layout_weight="1"

                android:layout_height="wrap_content"
                android:text="Image 4"
                />
        </LinearLayout>

        <!-- Existing ImageView layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gems_splash" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gems_splash" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gems_splash" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/gems_splash" />
        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"

            android:id="@+id/buttonAddGem"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:text="Add Gem" />

    </LinearLayout>
</FrameLayout>