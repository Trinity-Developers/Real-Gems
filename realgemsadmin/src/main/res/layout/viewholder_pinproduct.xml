<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="99dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pinproduct_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="112dp"
                android:layout_marginTop="16dp"
                android:elevation="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.213"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/amber" />

            <TextView
                android:id="@+id/pinproduct_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="name"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/pinproduct_img"
                app:layout_constraintTop_toBottomOf="@+id/pinproduct_img" />

            <TextView
                android:id="@+id/pinproduct_carats"
                android:layout_width="42dp"
                android:layout_height="16dp"
                android:layout_marginTop="10dp"
                android:text="gbbbbgnb"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/pinproduct_name"
                app:layout_constraintStart_toStartOf="@+id/pinproduct_name"
                app:layout_constraintTop_toBottomOf="@+id/pinproduct_name" />

            <TextView
                android:id="@+id/pinproduct_compoition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="compoition"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/pinproduct_carats"
                app:layout_constraintTop_toBottomOf="@+id/pinproduct_carats" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>